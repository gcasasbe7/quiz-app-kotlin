<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.SelectableListActivity"
    android:orientation="vertical"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_close_black_36"
            android:scaleType="fitXY"/>

    </FrameLayout>

    <TextView
        android:id="@+id/txt_selectable_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="12dp"/>


    <EditText
        android:drawableStart="@drawable/outline_search_black_24"
        android:id="@+id/et_list_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search a $title$"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>